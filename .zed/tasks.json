[
  {
    "label": "CMake: Configure (Debug)",
    "command": "cmake --preset dev-debug",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "CMake: Build (Debug)",
    "command": "cmake --build --preset dev-debug",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "CMake: Test (Debug)",
    "command": "ctest --preset dev-debug",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Run: Server (Debug)",
    "command": "./build/dev-debug/blank-chat-server",
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
    "reveal": "always",
    "env": {
      "SPDLOG_LEVEL": "debug"
    }
  },
  {
    "label": "Run: Client (Debug)",
    "command": "./build/dev-debug/blank-chat-client",
    "use_new_terminal": true,
    "allow_concurrent_runs": true,
    "reveal": "always"
  },
  {
    "label": "Pipeline: Check Memory Leaks (ASan)",
    "command": "cmake --preset ci-asan && cmake --build --preset ci-asan && ctest --preset ci-asan",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Pipeline: Check Threads (TSan)",
    "command": "cmake --preset ci-tsan && cmake --build --preset ci-tsan && ctest --preset ci-tsan",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always"
  },
  {
    "label": "Clean Build",
    "command": "rm -rf build",
    "use_new_terminal": false,
    "reveal": "always"
  }
]
